<div class="game_container">

  <div class="total_scores">
    <% @game.players.order(:id).each do |player| %>
      <p><%= player.player_name %>'s Total Score: <%= player.total_score %></p>
    <% end %>
  </div>

  <div class="current">
    <p><%= @game.current_player.player_name %>, you are up!</p>

    <p>Current Score: <%= @game.current_player.current_score %></p>

    <% if !@game.last_roll.empty? %>
      <%= form_for @game do |f| %>
        <div class="dice_desc">You rolled:</div>
        <% @game.last_roll.each_with_index do |die, i| %>
          <input id="dice_<%= i %>" name="dice_<%= i %>" type="checkbox" value="<%= die[0] %>"/>
          <label for="dice_<%= i %>"><%= die[1] %></label>
        <% end %>
        <% if @bust %>
          <%= form_for @game do |f| %>
            <%= f.submit 'Awww, man!' %>
          <% end %>
        <% else %>
          <%= f.submit 'Roll' %>
          <%= f.submit 'Stay' %>
        <% end %>
      <% end %>
    <% else %>
      <%= form_for @game do |f| %>
        <%= f.submit 'Roll' %>
      <% end %>
    <% end %>
  </div>
</div>
